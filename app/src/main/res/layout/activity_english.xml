<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_english"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sabutos.englishproverbs_banglaprobad.activities.EnglishActivity">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:inputType="textPersonName"
        android:padding="3sp"
        android:layout_marginLeft="3sp"
        android:layout_marginRight="3sp"
        android:drawableLeft="@drawable/magnifire"
        android:hint="Search"
        android:textColor="#030405"
        android:textSize="20sp"
        android:background="@drawable/custom_edittext"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_marginTop="4sp"
        android:layout_alignParentTop="true">
    </EditText>
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.AdView>

    <com.sabutos.englishproverbs_banglaprobad.model.widget.IndexableListView
        android:id="@+id/listview_english_product"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="#d1d1d1"
        android:dividerHeight="2sp"
        android:layout_below="@+id/editText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/adView">
        </com.sabutos.englishproverbs_banglaprobad.model.widget.IndexableListView>

</RelativeLayout>
